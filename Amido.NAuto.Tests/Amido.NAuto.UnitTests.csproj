  <PropertyGroup>
    <TargetFrameworks>net40;netcoreapp1.0</TargetFrameworks>
    <AssemblyName>Amido.NAuto.UnitTests</AssemblyName>
    <PackageId>Amido.NAuto.UnitTests</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Shouldly" Version="3.0.0" />
